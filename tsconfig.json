{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es2020", "dom"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "Front-end/src/**/*.ts",
    "Back-end/*.ts",
    "Front-end/src/**/*.tsx",
    "Back-end/*.tsx",
    "./vite-env.d.ts",
    "./"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "public",
    "cypress.config.ts",
    "cypress"
  ]
}
